output "eDP-1" {
    alias $INTERNAL
    scale 1
    position 0,0
    mode 1920x1200@60.00Hz
}

output "Lenovo Group Limited 0x403D Unknown" {
    alias $INTERNAL2
    scale 1
    position 0,0
    mode 1920x1200@60.00Hz
}

output "BNQ BenQ RL2755 N7F05437SL0" {
    alias $SCREEN1
    scale 1
    position 960,0
}

output "PNP(BNQ) BenQ RL2755 N7F05437SL0" {
    alias $SCREEN1A
    scale 1
    position 960,0
}

output "Lenovo Group Limited LEN T27i-10 V5BYW626" {
    alias $SCREEN2
    scale 1
    position 0,1080
}

output "Dell Inc. DELL P2719H 35148R2" {
    alias $SCREEN3
    scale 1
    position 1920,1080
}

profile laptop {
    output $INTERNAL enable
}

profile laptop2 {
    output $INTERNAL2 enable
}

profile docked-hypr {
    output $INTERNAL disable
    output $SCREEN1 enable
    output $SCREEN2 enable
    output $SCREEN3 enable
}

profile docked-niri {
    output $INTERNAL2 disable
    output $SCREEN1A enable
    output $SCREEN2 enable
    output $SCREEN3 enable
}
