# Background opacity
background-opacity = 0.8

# Config file
config-file = theme

# Confirm close
confirm-close-surface = false

# Cursor
cursor-color =
cursor-invert-fg-bg = true
cursor-opacity = 1
cursor-style-blink = false
adjust-cursor-height = 0
adjust-cursor-thickness = 0

# Font
font-family = JetBrains Mono NL Regular
font-feature = -calt
font-feature = -dlig
font-feature = -liga
font-size = 12
font-thicken = true

# GTK
gtk-tabs-location = hidden

# Keybinds
keybind = ctrl+shift+,=reload_config

keybind = ctrl+t=new_tab
keybind = ctrl+tab=next_tab
keybind = ctrl+shift+tab=previous_tab
keybind = ctrl+shift+q=close_surface

keybind = ctrl+shift+m=new_split:left
keybind = ctrl+shift+n=new_split:down
keybind = ctrl+shift+e=new_split:up
keybind = ctrl+shift+i=new_split:right

# Resize
resize-overlay = never

# Title
title = ghostty

# Window
window-decoration = false
window-padding-color = background
window-padding-balance = true
window-inherit-working-directory = true

# Working directory
working-directory = inherit
