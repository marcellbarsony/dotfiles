# TTY1 (Wayland)
if [[ "$(tty)" = "/dev/tty1" ]]; then
    Hyprland
    # qtile start -b wayland
fi
#
# TTY2 (Wayland)
if [[ "$(tty)" = "/dev/tty2" ]]; then
    # Issue #1914
    niri-session -l
fi


# TTY3 (X11)
if [[ "$(tty)" = "/dev/tty3" ]]; then
    pgrep qtile || startx "${XDG_CONFIG_HOME}/x11/.xinitrc"
fi
